<h1><%= @user.name %>の一言コメント編集ページ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
      <%= f.label :comment, "一言コメント" %>
      <%= f.text_field :comment, "form-control" %>

      <%= f.submit "投稿", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>

<%= link_to "ユーザーページへ戻る", user_path, class: "btn btn-lg btn-primary" %>